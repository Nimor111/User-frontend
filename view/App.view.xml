<mvc:View
  controllerName="sap.ui.user.frontend.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">
  <App class="userFrontend">
    <pages>
      <Page title="Users">
        <content>
          <Panel
            headerText="List of users"
            class="sapUiResponsiveMargin"
            width="auto">
            <content>
              <Button
                text="Add User"
                press="onOpenCreateDialog"/>
              <mvc:XMLView viewName="sap.ui.user.frontend.view.UsersList" />
            </content>
          </Panel>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
