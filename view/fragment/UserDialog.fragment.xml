<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog
    id="userDialog"
    title="Hello {singleUser>/email}">
    <content>
      <Input
        value="{singleUser>/firstName}"
        valueLiveUpdate="true"
        width="60%"
        class="sapUiResponsiveMargin"
        />
      <Input
        value="{singleUser>/lastName}"
        valueLiveUpdate="true"
        width="60%"
        class="sapUiResponsiveMargin"
        />
      <Input
        value="{singleUser>/role}"
        valueLiveUpdate="true"
        width="60%"
        class="sapUiResponsiveMargin"
        />
      <Input
        value="{singleUser>/password}"
        valueLiveUpdate="true"
        width="60%"
        class="sapUiResponsiveMargin"
        />
    </content>
    <buttons>
      <Button
        text="Close"
        press="onCloseDialog" />
      <Button
        text="Delete"
        press="onDeleteUser" />
      <Button
        text="Update"
        press="onSubmitForm" />
    </buttons>
  </Dialog>
</core:FragmentDefinition>
